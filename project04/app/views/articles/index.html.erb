<h1>Articl.es</h1>
<h3>... with a name .com hipsters love!</h3>

<h2>All the World's Articles</h2> <%= link_to 'Create an Article', new_article_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Author Name</th>
    <th>Body</th>
    <th>Creation Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>


	<% @articles.each do |article| %>
	  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
		<td><%= article.title %></td>
		<td><%= article.author %></td>
		<td><%= article.body %></td>
		<td><%= article.creation_date %></td>
		<td><%= link_to 'Show', article %></td>
		<td><%= link_to 'Edit', edit_article_path(article) %></td>
		<td><%= link_to 'Destroy', article, confirm: 'Are you sure?', method: :delete %></td>
	  </tr>
	<% end %>
</table>

<br />
<p><%= pluralize(@articles.size, "article")%>.</p>


