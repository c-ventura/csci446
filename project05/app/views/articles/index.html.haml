- content_for :subtitle do
  %h3 ... with a name .com hipsters love!
  %h2
    All the World's Articles #{link_to image_tag("add.png", :border => 0, :title => "Create"), new_article_path}  Create an Article
%table
  %colhead
    %tr
      %th Title
      %th Author Name
      %th Body
      %th Creation Date
      %th
      %th
      %th
  %midtable
    - @articles.each do |article|
      %tr{:class => cycle('list_line_odd', 'list_line_even')}
        %td= h article.title
        %td= h article.author
        %td= truncate(article.body, :length => 30)
        %td= article.creation_date
        %td= link_to image_tag("zoom.png", :border => 0, :title => "View Article"), article
        %td= link_to image_tag("application_edit.png", :border => 0, :title => "Edit"), edit_article_path(article)
        %td= link_to image_tag("delete.png", :border => 0, :title => "Delete"), article, confirm: 'Are you sure?', method: :delete
%br/
%p= will_paginate @articles
%p
  = pluralize(@total_articles, "article")
  \.
